{
	"backend": {
		"export": {
			"client": "localise",
			"locale": [ "en_US", "pt_PT" ],
			"type"  : "plugin",
			"domain": "wp-crumbs",
			"path"  : "./languages/",
			"ext"   : "po",
			"format": "gettext"
		},
		"import": {
			"client"     : "localise",
			"locale"     : "",
			"type"       : "plugin",
			"domain"     : "wp-crumbs",
			"path"       : "./languages/",
			"filename"   : "/backend.pot",
			"ext"        : "pot",
			"format"     : "gettext",
			"tag-new"    : "TranslationHelper",
			"tag-updated": "TranslationHelper",
			"delete-absent": true
		},
		"make_pots": {
			"client": "WP_I18n",
			"domain": "wp-crumbs",
			"destination": "./languages/",
			"source": "./includes/",
			"skip-js"    : true,
			"filename": "backend.pot"
		}
	},
	"frontend": {
		"export": {
			"client": "localise",
			"locale": [ "en_US", "pt_PT" ],
			"type"  : "plugin",
			"domain": "frontend",
			"js-handle": "wp_crumbs_frontend",
			"path"  : "./languages/",
			"ext"   : "json",
			"format": "jed"
		},
		"import": {
			"client": "localise",
			"locale": "",
			"type"  : "plugin",
			"domain": "frontend",
			"path"  : "./languages/",
			"ext"   : "pot",
			"format": "gettext",
			"tag-new" : "TranslationHelper",
			"tag-updated": "TranslationHelper",
			"delete-absent": true
		},
		"make_pots": {
			"client": "WP_I18n",
			"domain": "frontend",
			"destination": "./languages/",
			"source": "./src/js/",
			"filename": "frontend.pot",
			"skip-js": false
		}
	}
}
